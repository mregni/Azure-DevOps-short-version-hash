{
    "manifestVersion": 1,
    "id": "ShortGitVersionHashExtractor",
    "name": "Short git version hash extractor",
    "version": "0.0.8",
    "publisher": "MikhaelRegni",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Tool if you need the short version hash while building/releasing. Includes one build/release task.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/icon.png"        
    },
	"tags": [
		"git", 
		"hash", 
		"commit", 
		"short"
	],
	"repository": {
		"type": "git",
		"uri": "https://github.com/mregni/Azure-DevOps-short-version-hash"
	},
	"content": {
        "details": {
            "path": "readme.md"
        },
		"license": {
			"path": "LICENSE"
		}
    },
	"CustomerQnASupport": {
        "enableqna":"true"
    },
	"files": [
		{
			"path": "ShortGitVersionHashExtractor/script.ps1"
		},
		{
			"path": "ShortGitVersionHashExtractor/task.json"
		},
		{
			"path": "ShortGitVersionHashExtractor/icon.png"
		},
		{
			"path": "ShortGitVersionHashExtractor/ps_modules/vststasksdk"
		}
	],
	"links": {
		"repository": {
			"uri": "https://github.com/mregni/Azure-DevOps-short-version-hash"
		},
		"issues": {
			"uri": "https://github.com/mregni/Azure-DevOps-short-version-hash/issues"
		}
	},
	"scope": [
		"vso.build"
	],
	"contributions": [
		{
			"id": "ShortGitVersionHashExtractor",
			"type": "ms.vss-distributed-task.task",
			"targets": [
				"ms.vss-distributed-task.tasks"
			],
			"properties": {
				"name": "ShortGitVersionHashExtractor"
			}
		}
	]
}